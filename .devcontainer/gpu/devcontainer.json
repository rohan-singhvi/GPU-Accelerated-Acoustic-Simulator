{
    "name": "devcontainer-gpu",
	"build": {
		"dockerfile": "../../Dockerfile",
		"context": "../..",
		"target": "dev"
	},
	// GPU args enabled
	"runArgs": [
		"--gpus", "all",
		"--cap-add=SYS_PTRACE",
		"--security-opt", "seccomp=unconfined"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-vscode.cpptools",
				"ms-vscode.cmake-tools",
				"nvidia.nsight-vscode-edition"
			]
		}
	},
	"postCreateCommand": "mkdir -p build && cd build && cmake .. && make"
}