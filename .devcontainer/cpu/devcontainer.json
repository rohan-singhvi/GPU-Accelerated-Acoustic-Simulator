{
	"name": "devcontainer-cpu",
	"build": {
		"dockerfile": "../../Dockerfile",
		"context": "../..",
		"target": "dev"
	},
	// No GPU args here
	"runArgs": [
		"--cap-add=SYS_PTRACE",
		"--security-opt", "seccomp=unconfined"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-vscode.cpptools",
				"ms-vscode.cmake-tools"
			]
		}
	},
	"postCreateCommand": "mkdir -p build && cd build && cmake .. && make"
}